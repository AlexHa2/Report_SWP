@model SWPSolution.ViewModels.Catalog.Product.ProductViewModel

@{
    ViewData["Title"] = "Title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Details</h1>
    <div class="card mb-4">

        <div class="card-body">
            <div class="col-md-12">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CategoriesId)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ProductName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Quantity)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Price)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.StatusDescription)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>